@model IEnumerable<Greenhouse.web.Models.APIUser>

@{
	Layout = "_MainLayout";
}


<h1>List of APIUsers</h1>

<div class="container text-end">
	<a asp-controller="APIUser" asp-action="Create" class="btn btn-primary">
		Create New APIUser
	</a>
</div>

<table class="table table-hover">
	<thead>
		<tr class="table-info">
			<th>User Id</th>
			<th>Username</th>
			<th>Password</th>
			<th>Email Address</th>
			<th>Active Status</th>
			<th>Role</th>
			<th>Role Permissions</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>

		@foreach (APIUser apiUser in Model)
		{
			<tr class="table-info">
				<th>@apiUser.Id</th>
				<th>@apiUser.Username</th>
				<th>@apiUser.Password</th>
				<th>@apiUser.Email</th>
				<th>@apiUser.IsActive</th>
				<th>@apiUser.Role.Name</th>
				<th>@apiUser.Role.Description</th>
				<th>
					<a asp-controller="APIUser" asp-action="GetAPIUserById" asp-route-id="@apiUser.Id">Details</a>
				</th>
				<th>
					<a asp-controller="APIUser" asp-action="ChangeState" asp-route-id="@apiUser.Id">ChangeState</a>
				</th>
			</tr>
		}
	</tbody>
</table>
