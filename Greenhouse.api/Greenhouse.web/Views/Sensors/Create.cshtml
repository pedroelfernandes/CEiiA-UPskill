@model Greenhouse.web.Models.Sensor

@{
	Layout = "_MainLayout";
}

<head>
	<meta name="viewport" content="width=device-width" />
	<title>Create Sensor</title>
</head>

<body>
	<form method="post" asp-action="Create">
		<div class="row pb-2">
			<h4 class="text-dark text-left m-2">
				Sensor
			</h4>
		</div>


		<div class="m-2">
			<div class="mb-3">
				<label asp-for="Name" class="control-label"></label>
				<input asp-for="Name" class="form-control" required minlength="1"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Description" class="control-label"></label>
				<input asp-for="Description" class="form-control" required minlength="1"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Unit" class="control-label"></label>
				<input asp-for="Unit" class="form-control"/>
				<span asp-validation-for="Unit" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Company" class="control-label"></label>
				<input asp-for="Company" class="form-control" required minlength="1"/>
				<span asp-validation-for="Company" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="ActiveSince" class="control-label"></label>
				<input asp-for="ActiveSince" class="form-control" />
				<span asp-validation-for="ActiveSince" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="SensorType" class="control-label">Choose a sensorType</label>
				<input asp-for="SensorType" class="form-control" />
				<span asp-validation-for="SensorType" class="text-danger"></span>
			</div>
			<div class="mb-3 form-check">
				<label class="form-check-label">
					<input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
				</label>
			</div>
		</div>
		<div class="m-2">
			<input type="submit" value="Create" class="btn btn-primary" />
			<a asp-controller="GetSensors" asp-action="Get" class="btn btn-outline-secondary">Back</a>
		</div>
	</form>
</body>
@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}

}
