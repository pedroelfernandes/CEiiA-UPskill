@model Greenhouse.web.Models.Role

@{
	Layout = "_MainLayout";
}


<head>
	<meta name="viewport" content="width=device-width" />
	<title>Create Role</title>
</head>
<body>
	<form method="post" asp-action="Create">
		<div class="row pb-2">
			<h4 class="text-dark text-left m-2">
				Role
			</h4>
		</div>

		<div asp-validation-summary="All" class="m-2">
