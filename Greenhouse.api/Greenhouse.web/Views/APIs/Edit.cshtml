@model Greenhouse.web.Models.API

<form asp-action="Edit">
	<div class = "border m-2 p-4">
		<div class = "row pb-2">
			<h2 class ="text-primary">
				Add details to API
			</h2>
		</div>
		<div asp-validation-summary="All"></div>
		<div class= "mb-3">
			<label asp-for="ApiId" class="form-label"></label>
			<input asp-for="ApiId" class="form-control" readonly/>
		</div>
		<div class= "mb-3">
			<label asp-for="ApiName" class="form-label">API Name</label>
			<input asp-for="ApiName" class="form-control"/>
			<span asp-validation-for="ApiName" class= "text-danger"></span>
		</div>
		<div class= "mb-3">
			<label asp-for="ApiDescription" class="form-label">API Description</label>
			<input asp-for="ApiDescription" class="form-control" />
			<span asp-validation-for="ApiDescription" class= "text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Update</button>
		<a asp-controller="APIs" asp-action="Index" class = "btn btn-secondary">Back to APIs list</a>
	</div>
</form>

@section Scripts {
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}