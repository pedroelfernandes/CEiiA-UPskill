
@model List<API>

<h1>APIs</h1>

<div class = "container text-end">
	<a asp-controller="APIs" asp-action="Create" class="btn btn-primary">
		Add a new API
	</a>
</div>

<table class="table table-bordered table-striped">
	<tr>
		<th>id</th><th>Name</th><th>Description</th><th></th><th></th>
	</tr>

	@foreach (API aPI in Model)
	{
		<tr>
			<td>@aPI.ApiId</td>
			<td>@aPI.ApiName</td>
			<td>@aPI.ApiDescription</td>
			<td>
				<a asp-controller="APIs" asp-action="Edit" asp-route-id="@aPI.ApiId">Edit</a>
			</td>
			<td>
				<a asp-controller="APIs" asp-action="Delete" asp-route-id="@aPI.ApiId">Delete</a>
			</td>
		</tr>
	}

</table>